	public void prod() {
		Scanner tec = new Scanner(System.in);

		System.out.println("bem vindo a nossa area de produtos");
		
		System.out.println("sistema de Produtos ");
		System.out.println("Preparação de alimentos, escolha 1");
		System.out.println("Abertura de embalagens, escolha 2");
		System.out.println("Corte e processamento,escolha 3");
		System.out.println("Cozimento,escolha 4");
		System.out.println("Assamento,escolha 5");
		System.out.println("Serviço e manipulação,,escolha 6");
		System.out.println("Outros utensílios,escolha 7");
		System.out.println("digite o numero que você quer");
		int num = tec.nextInt();
		
		if (num==1) {
			preparação();
		}
		
		if (num==2) {
			abertura();
		}
		if (num==3) {
			corte();
		}
		if (num==4) {
			cozimento();
		}
		
		if (num==5) {
			assamento();
		}
		if (num==6) {
			manipulação();
		}
		if (num==7) {
			outros();
		}
	}
	
	
